<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_item_small_padding"
    android:layout_marginRight="@dimen/list_item_small_padding"
    android:layout_marginTop="@dimen/list_item_small_padding"
    android:layout_marginBottom="@dimen/list_item_small_padding"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_thumbnail_height"
            android:background="@color/photo_placeholder"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_large_padding"
            android:paddingTop="@dimen/list_item_large_padding"
            android:paddingRight="@dimen/list_item_large_padding"
            android:paddingBottom="@dimen/list_item_small_padding"
            android:ellipsize="end"
            android:maxLines="4" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_large_padding"
            android:paddingRight="@dimen/list_item_large_padding"
            android:paddingBottom="@dimen/list_item_large_padding"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
